generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Products {
  id             Int    @id @default(autoincrement()) @db.UnsignedInt
  name           String @db.VarChar(255)
  description    String @db.Text
  price          Int    @db.Int()
  images         Json?  @db.Json
  stock_status   String @db.VarChar(255)
  stock_quantity Int    @db.Int
}

model Orders {
  id                  Int      @id @default(autoincrement()) @db.UnsignedInt
  order_date          DateTime @updatedAt
  customer_first_name String   @db.VarChar(255)
  customer_last_name  String   @db.VarChar(255)
  customer_address    String   @db.VarChar(255)
  customer_postcode   String   @db.VarChar(255)
  customer_city       String   @db.VarChar(255)
  customer_email      String   @unique @db.VarChar(255)
  customer_phone      String   @default("NULL") @db.VarChar(255)
  order_total         Int      @db.Int
}

model OrdersItems {
  product_id Int @id @db.Int
  qty        Int @db.Int
  item_price Int @db.Int
  item_total Int @db.Int
}
